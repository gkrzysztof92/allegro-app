<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gacek.krzysztof.allegroapp.fragment.AccountDataFormFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!-- Email Label -->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/accountData_emailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText android:id="@+id/accountData_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Email" />
    </android.support.design.widget.TextInputLayout>

    <!--  WebApi Key -->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/accountData_webApiKeyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText android:id="@+id/accountData_webApiKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:hint="WebApiKey" />
    </android.support.design.widget.TextInputLayout>

    <!--  Local Version -->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/accountData_localVersionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText android:id="@+id/accountData_localVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:hint="Local Version" />
    </android.support.design.widget.TextInputLayout>

    <!-- Password Label -->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/accountData_passwordLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText android:id="@+id/accountData_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password"/>
    </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</FrameLayout>
