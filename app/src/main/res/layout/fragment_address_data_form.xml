<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.gacek.krzysztof.allegroapp.fragment.AddressDataFormFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/addressData_cityLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText android:id="@+id/addressData_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Miasto" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/addressData_postCodeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText android:id="@+id/addressData_postCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:hint="Kod Pocztowy" />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wojewdztwo"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:layout_marginStart="5dp"/>
            <Spinner
                android:id="@+id/addressData_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
